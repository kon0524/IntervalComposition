<Window x:Class="IntervalComposition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" AllowDrop="True">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="クリア" />
            <MenuItem Header="実行" />
            <MenuItem Header="保存" />
        </Menu>
        <DockPanel DockPanel.Dock="Left">
            <ListBox ItemsSource="{Binding Images}" Drop="files_Drop" Width="100" Background="#FFE5E5E5" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Informations..." />

        <Image Name="display"></Image>
    </DockPanel>
</Window>
